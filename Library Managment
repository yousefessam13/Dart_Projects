class Book {
  String name;
  bool available;
  Book(this.name, this.available);
}
class Library {
  List<Book> books = [];
  void addBook(String name) {
    books.add(Book(name, true));
    print("Book added: $name");
  }
  void borrowBook(String name) {
    for (var book in books) {
      if (book.name == name && book.available) {
        book.available = false;
        print("You borrowed: $name");
      }
    }
  }
  void returnBook(String name) {
    for (var book in books) {
      if (book.name == name && !book.available) {
        book.available = true;
        print("You returned: $name");
      }
    }
  }
  void showAvailableBooks() {
    print("Available books:");
    for (var book in books) {
      if (book.available) {
        print(book.name);
      }
    }
  }
}
 main() {
  Library l = Library();
  l.addBook("Clean Code");
  l.addBook("HTML & CSS");
  l.showAvailableBooks();
  l.borrowBook("HTML & CSS");
  l.showAvailableBooks();
  l.returnBook("HTML & CSS");
  l.showAvailableBooks();
}
